        {
            "title": "Запити по контейнерах",
            "type": "stat",
            "datasource": "Loki",
            "targets": [
                {
                    "expr": "count_over_time({container=~\".*\"}[$__interval])",
                    "legendFormat": "{{container}}",
                    "refId": "A"
                }
            ],
